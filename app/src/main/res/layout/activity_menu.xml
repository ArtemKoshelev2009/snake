<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MenuActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp"
            tools:context=".MenuActivity">

            <TextView
                android:id="@+id/recordTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ваш максимальный результат в «Классика»: 0"
                android:textSize="15sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:gravity="center"
              />
            <TextView
            android:id="@+id/recordTv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ваш максимальный результат в «Рандом»: 0"
            android:textSize="15sp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:text="Классика"
                    android:onClick="solveLinear"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="solveLinear3"
                    android:backgroundTint="@color/green"
                    android:text="Рандом"/>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:text="Настройки"
                android:onClick="solveLinear2"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>